#!/usr/bin/env bash

set -e
set -o pipefail
set -o nounset

CURRENT_DIR=$(pwd)
BUILD_DIR=$1
CACHE_DIR=$2
BUILDPACK_DIR=`dirname $(readlink -f ${BASH_SOURCE%/*})`

echo "CURRENT_DIR: $CURRENT_DIR"
ls -al

sleep 5

cd $BUILD_DIR
echo "BUILD_DIR: $BUILD_DIR"
ls -al

sleep 5

cd $CACHE_DIR
echo "CACHE_DIR: $CACHE_DIR"
ls -al

sleep 5

cd $BUILDPACK_DIR
echo "BUILDPACK_DIR: $BUILDPACK_DIR"
ls -al

sleep 5

cd $BUILD_DIR
mv $BUILDPACK_DIR/node-v12.13.0-linux-x64.tar.gz .

sleep 5

mkdir ./node
tar --strip-components 1 -xzf node-v12.13.0-linux-x64.tar.gz -C ./node

sleep 5

echo "Node was extracted"
ls -al $BUILD_DIR/node/bin

ls -al
sleep 5

mv $BUILDPACK_DIR/instantclient-basic-linux.x64-19.3.zip .
mv $BUILDPACK_DIR/instantclient-sdk-linux.x64-19.3.zip .
mkdir oracle
unzip instantclient-basic-linux.x64-19.3.zip
mv instantclient_19_3 oracle/instantclient
unzip instantclient-sdk-linux.x64-19.3.zip
mv instantclient_19_3/sdk ./oracle/instantclient/sdk

export PATH="$BUILD_DIR/node/bin":$PATH
export NODE_ENV=${NODE_ENV:-production}
export LD_LIBRARY_PATH=$BUILD_DIR/oracle/instantclient
export OCI_LIB_DIR=$BUILD_DIR/oracle/instantclient
export OCI_INC_DIR=$BUILD_DIR/oracle/instantclient/sdk/include
